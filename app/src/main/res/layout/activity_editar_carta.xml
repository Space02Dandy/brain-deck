<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editTextPregunta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pregunta" />

        <EditText
            android:id="@+id/editTextRespuesta1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Respuesta 1 (correcta)" />

        <EditText
            android:id="@+id/editTextRespuesta2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Respuesta 2" />

        <EditText
            android:id="@+id/editTextRespuesta3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Respuesta 3" />

        <EditText
            android:id="@+id/editTextRespuesta4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Respuesta 4" />



        <Button
            android:id="@+id/botonGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar" />

    </LinearLayout>
</ScrollView>

